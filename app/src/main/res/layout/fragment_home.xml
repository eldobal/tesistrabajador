<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorAccentllight"
    android:layout_height="match_parent"
    tools:context=".fragments.homeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/homerelative01"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:padding="8dp">

            <RelativeLayout
                android:layout_width="125dp"
                android:layout_height="125dp">

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/loadinglistaimgperfilhome"
                    app:lottie_rawRes="@raw/loadinglistasolicitudes"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    android:layout_centerInParent="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </com.airbnb.lottie.LottieAnimationView>

                <ImageView
                    android:layout_margin="5dp"
                    android:id="@+id/idimagenperfiltrabajador"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    ></ImageView>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ididid"
                android:layout_width="match_parent"
                android:layout_marginLeft="125dp"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:gravity="center"
                        android:textSize="20dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:textColor="@color/colordark"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Estado:"
                        ></TextView>


                    <RelativeLayout
                        android:layout_marginLeft="100dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <Button
                            android:layout_margin="2dp"
                            android:id="@+id/btncambiodeestadotrabajador"
                            android:text=""
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"></Button>

                    </RelativeLayout>


                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_below="@+id/ididid"
                android:layout_width="match_parent"
                android:layout_marginLeft="125dp"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/txthomenombre"
                            android:text=""
                            android:gravity="center"
                            android:textSize="22dp"
                            android:fontFamily="sans-serif-condensed-medium"
                            android:textColor="@color/colordark"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        </TextView>


                    </RelativeLayout>


                </RelativeLayout>


            </LinearLayout>




        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/homerelative02"
            android:layout_below="@id/homerelative01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp">


                <TextView
                    android:id="@+id/txt010"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colordark"
                    android:textAlignment="center"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:text="Solicitud Actual "
                    android:textSize="25sp"
                    android:gravity="center_horizontal"></TextView>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardsolicitudactual"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentTop="true"
                        android:padding="8dp"
                        android:backgroundTint="@color/colorPrimaryDark"
                        app:cardCornerRadius="30dp"
                        app:cardElevation="6dp">


                        <com.airbnb.lottie.LottieAnimationView
                            android:id="@+id/idanimacionlistasolicitud"
                            app:lottie_rawRes="@raw/loadinglistasolicitudes"
                            app:lottie_autoPlay="true"
                            app:lottie_loop="true"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="85dp"
                            android:layout_height="90dp">
                        </com.airbnb.lottie.LottieAnimationView>


                        <ListView
                            android:layout_below="@+id/txt010"
                            android:id="@+id/solicitudactual"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        </ListView>


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_centerInParent="true"
                                android:id="@+id/txtnotfoundhome"
                                android:padding="8dp"
                                android:gravity="center"
                                android:textSize="18dp"
                                android:textColor="@color/colordark"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text=""
                                ></TextView>

                        </RelativeLayout>



                    </androidx.cardview.widget.CardView>
                </RelativeLayout>



            </LinearLayout>

        </RelativeLayout>




        <RelativeLayout
            android:layout_below="@+id/homerelative02"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

         <RelativeLayout
             android:id="@+id/relative1"
             android:layout_width="match_parent"
             android:layout_marginTop="10dp"
             android:layout_height="wrap_content">

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content">

                 <RelativeLayout

                     android:layout_width="match_parent"
                     android:layout_height="wrap_content">

                     <TextView
                         android:layout_centerVertical="true"
                         android:gravity="center"
                         android:textSize="26dp"
                         android:layout_marginTop="10dp"
                         android:fontFamily="sans-serif-condensed-medium"
                         android:textColor="@color/colordark"
                         android:layout_width="160dp"
                         android:layout_height="wrap_content"
                         android:text="Ganancias:"
                         ></TextView>


                     <RelativeLayout
                         android:layout_marginLeft="130dp"

                         android:layout_width="match_parent"
                         android:layout_height="wrap_content">

                         <Button
                             android:elevation="20dp"
                             android:background="@drawable/bg_btnganancias"
                             android:layout_margin="6dp"
                             android:id="@+id/btncalcularganancias"
                             android:layout_centerInParent="true"
                             android:text="Calcular"
                             android:gravity="center"
                             android:layout_width="170dp"
                             android:layout_height="wrap_content"></Button>

                     </RelativeLayout>


                 </RelativeLayout>


             </LinearLayout>

         </RelativeLayout>


            <RelativeLayout
                android:layout_below="@id/relative1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.cardview.widget.CardView
                    android:id="@+id/idcardinfoganancia"
                    android:layout_width="match_parent"
                    android:layout_margintop="12dp"
                    android:layout_marginBottom="12dp"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_alignParentTop="true"
                    android:padding="8dp"
                    android:backgroundTint="@color/colorAccent"
                    app:cardCornerRadius="30dp"
                    app:cardElevation="6dp">


                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/idanimacionlistasolicitud2"
                        app:lottie_rawRes="@raw/loadinglistasolicitudes"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </com.airbnb.lottie.LottieAnimationView>





                        <TextView
                            android:layout_gravity="center"
                            android:id="@+id/txtnotfoundhome2"
                            android:padding="8dp"
                            android:textSize="18dp"
                            android:textColor="@color/colordark"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""
                            ></TextView>



                </androidx.cardview.widget.CardView>

            </RelativeLayout>


        </RelativeLayout>



    </RelativeLayout>



</FrameLayout>